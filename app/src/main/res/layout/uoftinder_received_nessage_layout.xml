<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/uoftinder_other_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/uoftinder_received_message_bubble">

        <TextView
            android:id="@+id/uoftinder_other_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:paddingTop="7dp"
            android:paddingEnd="40dp"
            android:paddingBottom="7dp"
            android:text="Other's Chat Message"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/uoftinder_other_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/uoftinder_other_message_text"
            android:layout_marginStart="-40dp"
            android:layout_toEndOf="@+id/uoftinder_other_message_text"
            android:padding="7dp"
            android:text="00:00"
            android:textColor="#434343"
            android:textSize="11sp" />
    </RelativeLayout>
</RelativeLayout>